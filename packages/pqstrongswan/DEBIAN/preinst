#!/bin/sh -e

# Source debconf library.
. /usr/share/debconf/confmodule

# IP address
ipaddrs=`hostname -I`
ipcount=`echo $ipaddrs | sed -e 's/ $//g' | tr ' ' '\n' | wc -l`
if [ $ipcount -gt 1 ]
then
db_subst pqstrongswan/ip ipaddrs `echo $ipaddrs | sed -e 's/ $//g' | sed -e 's/ /, /g'` || true
db_input high pqstrongswan/ip ||true
db_go || true
else
db_set pqstrongswan/ip $ipaddrs || true
fi
echo $ipaddrs


# PSK
db_input high pqstrongswan/psk || true
db_go || true





